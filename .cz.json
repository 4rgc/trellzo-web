{
  "commitizen": {
    "name": "cz_conventional_commits",
    "version": "0.2.0",
    "tag_format": "v$version",
    "customize": {
      "bump_pattern": "^(?!(ci|docs|style)).*:",
      "bump_map": {
        "fix": "PATCH",
        "feat": "MINOR",
        "refactor": "MINOR",
        "perf": "MINOR",
        "test": "MINOR",
        "build": "MINOR"
      }
    }
  }
}